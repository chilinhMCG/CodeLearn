@inherits LayoutComponentBase

<MudThemeProvider Theme="MCGTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <NavBar />
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
            <MudScrollToTop>
                <MudFab Color="Color.Tertiary" Icon="@Icons.Filled.ArrowCircleUp" />
            </MudScrollToTop>
        </MudContainer>

    </MudMainContent>
    
    <Footer />
</MudLayout>

@code{
    MudTheme MCGTheme = new()
    {
        Palette = new Palette()
        {
            Primary = "#19B33D",
            AppbarBackground = "#19B33D",
        }
    };
}