@page "/admin/course-detail-manager"
@attribute [Authorize(Roles = "Admin")]
@inject ICourseDetailRepository CourseDetailRepository
@inject ICourseRepository CourseRepository



<MudPaper Class="p-4">

    <MudItem>
        <MudLink Href="/admin/course-detail/add-new" Color="Color.Success" Typo="Typo.h5">Thêm bài học mới</MudLink>
    </MudItem>
    <br />
    <MudItem lg="12">
        @foreach (var item in _courses)
        {
            <MudTable Hover="true" Items="_courseDetails.Where(x => x.CourseId == item.Id)" Bordered="true" Dense="true">
                <HeaderContent>
                    <!-- khoa hoc -->
                    <MudTh>
                        <MudLink Underline="Underline.None" Href="@($"/course/{item.Id}")">@item.Name</MudLink>
                    </MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <!-- bai hoc -->
                    <MudTd DataLabel="name" Class="text-center">
                        <MudLink Color="Color.Success" Underline="Underline.None"
                                 Href="@($"course-detail/{context.Id}")">@context.Name</MudLink>
                            </MudTd>
                            <MudTd DataLabel="crud" Class="text-center">
                                <MudButton Variant="Variant.Text">
                                    <MudLink Underline="Underline.None" Href="@($"/admin/course-detail/edit/{context.Id}")">Edit</MudLink>
                                </MudButton>
                            </MudTd>
                        </RowTemplate>
                    </MudTable>
                    <br />
                }

    </MudItem>
</MudPaper>
<br />


@code {
    private List<Course> _courses { get; set; } = new List<Course>();

    private List<CourseDetail> _courseDetails { get; set; } = new List<CourseDetail>();

    protected override void OnInitialized()
    {
        _courses = CourseRepository.GetAllCourse();
        _courseDetails = CourseDetailRepository.GetAllCourseDetail();
    }
}
