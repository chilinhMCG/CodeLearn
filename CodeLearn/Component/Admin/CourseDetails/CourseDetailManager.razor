@page "/admin/course-detail-manager"
@attribute [Authorize(Roles = "Admin")]
@inject ICourseRepository CourseRepository
@inject ICourseDetailRepository CourseDetailRepository


<MudPaper Class="p-4">

    <MudItem>
        <MudLink Href="/admin/course-detail/add-new" Color="Color.Success" Typo="Typo.h5">Thêm bài học mới</MudLink>
    </MudItem>
    <br />
    <MudItem lg="12">
        @foreach (var item in courses)
        {
            <MudTable Hover="true" Items="courseDetails.Where(x => x.CourseId == item.Id)" Bordered="true" Dense="true">
                <HeaderContent>
                    <MudTh>@item.Name</MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="name" Class="text-center">@context.Name</MudTd>
                    <MudTd DataLabel="crud" Class="text-center">
                        <MudButton Variant="Variant.Text">
                            <MudLink Underline="Underline.None" Href="@($"/admin/course-detail/edit/{context.Id}")">Edit</MudLink>
                        </MudButton>
                    </MudTd>
                </RowTemplate>
            </MudTable>
            <br />
        }

    </MudItem>
</MudPaper>
<br />


@code {
    protected List<Course> courses { get; set; } = new List<Course>();

    protected List<CourseDetail> courseDetails { get; set; } = new List<CourseDetail>();

    protected override void OnInitialized()
    {
        courses = CourseRepository.GetAllCourse();
        courseDetails = CourseDetailRepository.GetAllCourseDetail();
    }
}
