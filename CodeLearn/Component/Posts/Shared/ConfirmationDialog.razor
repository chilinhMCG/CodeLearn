<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="() => MudDialog.Cancel()">@CancelButtonText</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="() => MudDialog.Close(DialogResult.Ok(true))">@ConfirmButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string ContentText { get; set; } = "Bạn có chắc không?";

    [Parameter]
    public string CancelButtonText { get; set; } = "Không";

    [Parameter]
    public string ConfirmButtonText { get; set; } = "Có";
}
